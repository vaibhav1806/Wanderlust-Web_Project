<% layout("/layouts/boilerplate")%>

<div class="row mt-3">
    <div class="col-8 offset-2">
        <form action="/signup" method="post" class="needs-validation" novalidate>

            <h1>SignUp on Wanderlust</h1>

            <div class="mb-3">
                <label for="username" class="form-label">username</label>
                <input type="text" name="username" id="username" placeholder="Enter username" class="form-control" required>
                <div class="valid-feedback">username look Good</div>
                <div class="invalid-feedback">Enter valid username</div>
            </div>

            <div class="mb-3">
                <label for="email" class="form-label">email</label>
                <input type="email" name="email" id="email" placeholder="Enter email" class="form-control" required>
                
                <div class="invalid-feedback">Enter valid email</div>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">password</label>
                <input type="password" name="password" id="username" placeholder="Enter password" class="form-control" required>
                <div class="valid-feedback">Title look Good</div>
                <div class="invalid-feedback">Enter valid password</div>
            </div>
            <button class="btn btn-success">SignUp</button>
        </form>
    </div>
</div> 